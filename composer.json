{
  "name": "horat1us/yii2-carbon-behavior",
  "description": "Yii2 Carbon Timestamps Behavior",
  "type": "library",
  "require": {
    "php": ">=7.3",
    "yiisoft/yii2": "^2.0.15",
    "nesbot/carbon": "^1.36 | ^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.3",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Alexander Letnikow",
      "email": "reclamme@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "config": {
    "process-timeout": 1800,
    "sort-packages": true,
    "platform": {
      "php": "7.4"
    }
  },
  "scripts": {
    "lint": "./vendor/bin/phpcs --standard=PSR2 ./src ./tests",
    "phpcbf": "./vendor/bin/phpcbf --standard=PSR2 ./src ./tests",
    "test": "./vendor/bin/phpunit",
    "cover": "./vendor/bin/phpunit --coverage-clover=coverage.xml"
  },
  "autoload": {
    "psr-4": {
      "Horat1us\\Yii\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Horat1us\\Yii\\Tests\\": "tests/"
    }
  }
}
